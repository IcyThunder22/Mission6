  @{
	ViewData["Title"] = "EnterMovies";
}
@model Movie

<h3 style="text-align: center">Add a Movie to the Collection</h3>
<div class="content-container">
	<form method="post">
		<div>
			<label asp-for="Title" class="form-label">Title</label>
			<input asp-for="Title" class="form-control" required/>
		</div>

		<div>
			<label asp-for="Category" class="form-label">Category</label>
			<input asp-for="Category" class="form-control" required />
		</div>

		<div>
			<label asp-for="Year" class="form-label">Year</label>
			<input asp-for="Year" class="form-control" required />
		</div>

		<div>
			<label asp-for="Director" class="form-label">Director</label>
			<input asp-for="Director" class="form-control" required />
		</div>

		<div>
			<label asp-for="Rating" class="form-label">Rating</label>
			<select asp-for="Rating" class="form-control">
				<option value="G">G</option>
				<option value="PG">PG</option>
				<option value="PG-13">PG-13</option>
				<option value="R">R</option>
			</select>
		</div>

		<div>
			<label asp-for="Edited">Edited Version?</label>
			<select asp-for="Edited">
				<option value="true">Yes</option>
				<option value="false">No</option>
			</select>
			<br />
		</div>

		<div>
			<label asp-for="LentTo" class="form-label">Lent To (optional)</label>
			<input asp-for="LentTo" class="form-control" />
		</div>

		<div>
			<label asp-for="Notes" class="form-label">Notes (Max 25 characters)</label>
			<input asp-for="Notes" class="form-control" maxlength="25" />
		</div>

		<button type="submit">Add Movie</button>
	</form>
</div>