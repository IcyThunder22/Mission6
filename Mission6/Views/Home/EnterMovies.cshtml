@{
	ViewData["Title"] = "EnterMovies";
}

<h3>Add a Movie to the Collection</h3>
<form asp-action="AddMovie" method="post">
	<div>
		<label asp-for="Title" class="form-label">Title</label>
		<input asp-asp-for="Title" class="form-control" required/>
	</div>

	<div>
		<label asp-for="Category" class="form-label">Category</label>
		<input asp-asp-for="Category" class="form-control" required />
	</div>

	<div>
		<label asp-for="Year" class="form-label">Year</label>
		<input asp-asp-for="Year" class="form-control" required />
	</div>

	<div>
		<label asp-for="Director" class="form-label">Director</label>
		<input asp-asp-for="Director" class="form-control" required />
	</div>

	<div>
		<label asp-for="Rating" class="form-label">Rating</label>
		<select asp-for="Rating" class="form-control">
			<option value="G">G</option>
			<option value="PG">PG</option>
			<option value="PG-13">PG-13</option>
			<option value="R">R</option>
		</select>
	</div>

	<div>
		<input asp-for="Edited" class="form-check-input" type="checkbox" />
		<label asp-for="Edited" class="form-check-label">Edited?</label>
	</div>

	<div>
		<label asp-for="LentTo" class="form-label">Lent To (optional)</label>
		<input asp-for="LentTo" class="form-control" />
	</div>

	<div>
		<label asp-for="Notes" class="form-label">Notes (Max 25 characters)</label>
		<input asp-for="Notes" class="form-control" maxlength="25" />
	</div>

	<button type="submit">Add Movie</button>
</form>